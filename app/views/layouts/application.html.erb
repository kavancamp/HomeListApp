<!DOCTYPE html>
<html>
  <head>
    <title>HomeList</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
      
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

    <!--
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    -->
  </head>

  <body id=" <%= controller.controller_name %>" class="<%= controller.action_name %>">

    <% if ["public", "devise", "sessions", "registrations"].include?(controller.controller_name) %>
      <header>
        <%= render "layouts/navigation/public" %>
        <%= yield %>
      </header>
    <% else %>
     <%= render "layouts/navigation/dashboard" %>

     <div class="container-fluid">
      <div class="row">
        <%= render "layouts/navigation/sidebar" %>  
          <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
      <%= yield %>   
          </main> 
      </div>
    </div>     
          
    <% end %>

 

    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>   
    </body>
  </html>