<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/55a0d11672.js" crossorigin="anonymous"></script>     
     
  </head>

  <body id="<%= controller.controller_name %>" class="<%= controller.action_name %> <%= "show-sidebar" if @show_sidebar.present? %> ">
    <% if @show_sidebar.nil? %>
    <!-- Navbar -->
      <header>
        <%= render "layouts/navigation/public" %>
      </header>
        <%= yield %>
      <% else %>
    <%= render "layouts/navigation/dashboard" %>

    <div class="container-fluid">
      <div class="row">
        <%= render "layouts/navigation/sidebar" %>  
          <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <%= yield %>   
          </main> 
      </div>
    </div>     
          
    <% end %>

    <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert%></p>

