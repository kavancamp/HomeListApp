<h1>My Account</h1>


<table class="table">
  <thead>
    <tr>
      <th>Full name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Registed date</th>
      <th>Profile</th>
    </tr>
  </thead>
    
  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.full_name %></td>
        <td><%= account.email %></td>
        <td><%= account.role.capitalize %></td>
        <td><%= account.created_at.strftime("%d/%m/%y") %></td>
        <td><%= link_to "View profile", profile_path(account.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>