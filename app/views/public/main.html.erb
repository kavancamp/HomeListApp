<main>
  <div class="py-5 text-center" id="home-banner" style="background-color:powderblue;  height: 25rem;
  width: 100%; background-position: center;">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light py-5">Home Is Just Around The Corner</h1>
        <p class="lead text-muted">Find your forever home today...</p>
        </div>
      <div class="container"style=" width: 15rem;>
        <%= form_tag(search_path, :method => "get") do %>
          <div class="input-group">
            <%= search_field_tag :search, params[:search], class: "form-control" %>
             <div class="input-group-btn">
              <%= button_tag "Search", :class => 'btn btn-info glyphicon glyphicon-search', :name => nil %>
              </div>
          </div>
        <% end %>
      </div>
  </div>
  
  <div class="album py-5 bg-light">
    <div class="container">
        <div class="row">
          <%= render "properties/newest_properties", properties: @properties.limit(3)%>
        </div>
      </div>
    </div>  
</main>


