<%= form_with(model: property, local: true) do |form| %>
    <%= render "layouts/validation", item: @property %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :address %>
        <%= form.text_field :address, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :price, "Monthly Price (rental) / Or Total Cost" %>
        <%= form.text_field :price, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :bedrooms %>
        <%= form.text_field :bedrooms, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :bathrooms %>
        <%= form.text_field :bathrooms, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :parking_spaces %>
        <%= form.text_field :parking_spaces, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= form.label :for_sale %>
        <%= form.select :for_sale, options_for_select({"Yes" => true, "No" => "false"}, @property.for_sale), class: "form-control" %>
    </div>

    <div class="form-group">
        <% options = @property.for_sale? ? {"Available" => "available", "Sold" => "sold"} : {"Available" => "available", "Leased" => "leased"}  %>
        <%= form.label :status %>
        <%= form.select :status, options_for_select(options, @property.status), class: "form-control" %>
    </div>

    <% if @property.for_sale?%>
        <div class="form-group">
        <%= form.label :available_date %>
        <%= form.date_field :available_date, class: "form-control" %>
        </div>
    <% end %>
    
    <div class="mb-3">
        <%= form.label :photo, class: "form-label" %>
        <%= form.file_field :photo, accept: 'image/png, image/jpg, image/jpeg', class: "form-control" %>
            <% if @property.photo.present? %>
        <%= image_tag @property.photo, :class => "mt-4 w-25" %>
    <% end %>
    </div>
    <div class="actions">
        <%= form.submit "Save", :class => "btn-success" %>
    </div>
<% end %>