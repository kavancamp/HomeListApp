<h2> Properties</h2>
<table class="table table-striped"> 
    <thead>
        <tr>
        <th>Title</th>
        <th>Address</th>
        <th>Price</th>
        <th>Bedrooms</th>
        <th>Bathrooms</th>
        </tr>
    </thead>
    <tbody>
    <% @properties.each do |property| %>
        <tr>
        <td><%= property.name %></td>
        <td><%= property.address %></td>
        <td><%= property.price %></td>
        <td><%= property.bedrooms %></td>
        <td><%= property.bathrooms %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: {confirm: 'Please confirm'} %></td>
        </tr>
    <% end %>
    </tbody>
</table>
   
    <%= link_to  'New Property', new_property_path, class: "btn btn-block btn-lg btn-success"%>
